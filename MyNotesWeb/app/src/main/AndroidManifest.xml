<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.unisep.mynotes" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NovoNotebookActivity"
            android:label="@string/title_activity_novo_notebook" >
        </activity>
        <activity
            android:name=".NovoNoteActivity"
            android:label="@string/title_activity_novo_note" >
        </activity>
        <activity
            android:name=".NotebookDetalhesActivity"
            android:label="@string/title_activity_notebook_detalhes" >
        </activity>
    </application>

</manifest>
